<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Left Column: Contains txt_name2 and txt_identification_number -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <!-- TextView: txt_name2 -->
        <TextView
            android:id="@+id/txt_item_identification_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:text="Identification Number"
            android:textSize="18dp" />

        <!-- TextView: txt_identification_number -->
        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="6dp"
            android:text="name"
            android:textSize="18dp" />

    </LinearLayout>

    <!-- Vertical Divider View -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#808080" /> <!-- Màu xám mờ -->

    <!-- Right Column: Contains txt_averageScore centered vertically -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- TextView: txt_averageScore -->
        <TextView
            android:id="@+id/txt_item_totalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Score"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#808080" /> <!-- Màu xám mờ -->
</LinearLayout>
